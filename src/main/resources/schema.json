{
    "$schema": "http://json-schema.org/schema",
    "$id": "http://github.com/navima/Grapher/src/main/resources/schema.json",
    "title": "Grapher save file",
    "type": "object",
    "properties": {
        "lastNodeId": {
            "type": "integer"
        },
        "lastEdgeId": {
            "type": "integer"
        },
        "nodes": {
            "type": "object",
            "uniqueItems": true,
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "x": {
                        "type": "number"
                    },
                    "y": {
                        "type": "number"
                    },
                    "text": {
                        "type": "string"
                    },
                    "shape": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "enum": [
                            null,
                            "RECTANGLE",
                            "CIRCLE",
                            "RIGHT-TRI"
                        ]
                    }
                }
            }
        },
        "edges": {
            "type": "object",
            "uniqueItems": true,
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "from": {
                        "type": "integer"
                    },
                    "to": {
                        "type": "integer"
                    },
                    "text": {
                        "type": [
                            "string",
                            "null"
                        ]
                    }
                }
            }
        }
    },
    "required": [
        "nodes",
        "edges",
        "lastNodeId",
        "lastEdgeId"
    ]
}